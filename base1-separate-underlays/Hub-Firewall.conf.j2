config system settings
  # Allow overlay switchover of existing sessions (from shortcut to Hub)
  set tcp-session-without-syn enable
end
config firewall policy
  edit 1
    set name "Edge to Edge"
    set srcintf "EDGE_T1" "EDGE_T2"
    set dstintf "EDGE_T1" "EDGE_T2"
    set srcaddr "all"
    set dstaddr "all"
    set action accept
    set schedule "always"
    set service "ALL"
    # Allow overlay switchover of existing sessions (from shortcut to Hub)
    set anti-replay disable
    set tcp-session-without-syn all
  next
  edit 2
    set name "Health-Check"
    set srcintf "EDGE_T1" "EDGE_T2"
    set dstintf "lo-hc"
    set srcaddr "all"
    set dstaddr "all"
    set action accept
    set schedule "always"
    set service "PING"
  next
  edit 3
    set name "Edge to Internet (RIA)"
    set srcintf "EDGE_T2"
    set dstintf {{ globals.wan1_intf }}
    set srcaddr "all"
    set dstaddr "all"
    set action accept
    set schedule "always"
    set service "ALL"
    set utm-status enable
    set application-list "default"
    set logtraffic all
    set nat enable
  next
end
